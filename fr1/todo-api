apiVersion: v1
kind: Service
metadata:
  name: todoapi
  labels:
    app: tododb
spec:
  selector:
    app: todoapi
  ports:
    - name: http
      port: 80

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: todoapi
  labels:
    app: todoapi
spec:
  replicas: 2
  selector:
    matchLabels:
      app: todoapi
  template:
    metadata:
    labels:
      app: todoapi
    spec:
      containers:
      - name: nginx
        image: takagotch/nginx:latest
	imagePullPolicy: Always
	ports:
	- name: WORKER_PROCESSES
	  value: "2"
	- name: WORKER_CONNECTIONS
	  value: "1024"
	- name: LOG_STDOUT
	  value: "true"
	- name: BACKEND_HOST
	  value: "localhost:8080"
      - name: api
        image: takagotch/todoapi:latest
	imagePullPolicy: Always
	ports:
	- containerPort: 8080
	env:
	- name: TODO_BIND
	  value: ":8080"
	- name: "takagotch@tcp(mysql-master:3306)/tododb?parseTime=true"
	  value:  TODO_SLAVE_URL
	- name: TODO_SLAVE_URL
	  value: "takagotch:takagotch@tcp(mysql-slave:3306)/tododb?parseTime=true"


